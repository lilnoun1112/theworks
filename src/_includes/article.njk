---
layout: 'base-article.njk'
---

<div class="section-wrapper">

    <div class="feature-container">
        <div class="feature-image" style="width: 3fr; background-image: url('/static/{{ image }}'); background-size: cover; background-position: center">
            <div class="tag">{{ tags }}</div>
        </div>
        <div class="teaser-card" style="width: 4fr">
            <div class="titlebox">
                <h2>{{ title }}</h2>
            </div>
            <div class="textbox">
                <p>{{ preview }}</p>
            </div>
        </div>
    </div>
</div>
<div class="section-wrapper">
        <div class="blog-body">

            {{ content |safe }}

            {% if fullarticle %}
                {% if tags == 'Code' %}
                    <a href="{{ fullarticle }}" class="button-card" target="_blank">Access full code<div class="button-arrow"></div></a>
                {% else %}
                    <a href="{{ fullarticle }}" class="button-card" target="_blank">Read full article<div class="button-arrow"></div></a>
                {% endif %}
            {% endif %}

            

        </div>
    </div>





