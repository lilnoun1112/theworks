---
title: Harmonic Coherence - The Works
layout: 'base.njk'
---

    
    <ul class="section-wrapper">
    {% set count = 0 %}
        {%- for post in collections.featured | reverse -%}
            {% if count < 1 %}
                      <article class="feature-container normalwide">
                            <div class="feature-image" style="width: 3fr; background-image: url('/static/{{ post.data.image }}'); background-size: cover">
                               <div class="tag">{{ post.data.tags }}</div>
                            </div>
                            <div class="teaser-card" style="width: 4fr">
                              <div class="titlebox">
                                  <h2>{{ post.data.title }}</h2>
                              </div>
                             <div class="textbox">
                                    <p>{{ post.data.preview }}</p>
                                    <a class="link" href="{{ post.url }}">read more<div class="href-arrow"></div></a>
                              </div>
                         </div>
                        </article>
                {% set count = count + 1 %}
            {% endif %}
        {%- endfor -%}
    </ul>

<div class="section-wrapper">

        <div class="filters-container">
            <div class="button-filter">All<div class="underline"></div></div>
            <div class="button-filter">Projects<div class="underline"></div></div>
            <div class="button-filter">Preprints<div class="underline"></div></div>
            <div class="button-filter">Peer-reviewed<div class="underline"></div></div>
            <div class="button-filter">Codes<div class="underline"></div></div>
            <div class="button-filter">Patents<div class="underline"></div></div>
        </div>

<div class="publications-container">
  {% set rowCount = 0 %}
  {% for post in collections.publications | reverse %}
    {% if rowCount % 3 == 0 %}
      {% if rowCount > 0 %}
        </ul>
      {% endif %}
      <ul class="teaser-container blog">
    {% endif %}
    
    <li class="blog-card">
      <article class="teaser-card">
        <div class="teaser-image" style="background-image: url('/static/{{ post.data.image }}'); background-size: cover">
          <img src="/static/{{ post.data.image }}" style="display: none;">
          <div class="tag">{{ post.data.tags }}</div>
        </div>
        <div class="teaser-textbox">
            <div class="teas-txt-inner">
                <h3>{{ post.data.title }}</h3>
                <p>{{ post.data.preview }}</p>
            </div>
                <a href="{{ post.url }}" class="button-card">read more<div class="button-arrow"></div></a>
        </div>
      </article>
    </li>
    
    {% set rowCount = rowCount + 1 %}
  {% endfor %}
  
  </ul> <!-- Close the last ul if there are any posts -->
</div>

</div>
<script src="../js/boxheight.js"></script>